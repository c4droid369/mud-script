                    #delay 1 {
                        xtt.Send {change L};
                    } 0;
                };
                #action {~*********\e[1;35m^\e[2;37;0m********} {
                    #delay 1 {
                        xtt.Send {change M};
                    } 0;
                };
                #action {~*********\e[1;33m^\e[2;37;0m********} {
                    #delay 1 {
                        xtt.Send {change H};
                    } 0;
