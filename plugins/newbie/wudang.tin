#variable wudang[META] {
    {NAME} {wudang}
    {DESC} {武当派新手任务}
    {AUTHOR} {c4droid}
};

#function {wudang.Init} {
    #return true;
}

#nop 任务接取别名;
#alias {wudang.Accept} {
    #nop 若不在指定地点，则提示需要到指定地点接取新手任务;
    #if { "$gMapRoom[name]" != "武当广场" } {
        errLog 请到武当广场找冲虚道长接取新手任务;
        #return false;
    };

    xtt.Send {ask chongxu about job};

    #return true;
};

#nop 任务提交别名;
#alias {wudang.Success} {
    #nop 若不在指定地点，则提示需要到指定地点提交新手任务;
    #if { "$gMapRoom[name]" != "武当广场" } {
        errLog 请到武当广场找冲虚道长提交新手任务;
        #return false;
    };

    xtt.Send {ask chongxu about success};

    #return true;
};

#nop 任务取消别名;
#alias {wudang.Cancel} {
    #nop 若不在指定地点，则提示需要到指定地点取消新手任务;
    #if { "$gMapRoom[name]" != "武当广场" } {
        errLog 请到武当广场找冲虚道长取消新手任务;
        #return false;
    };

    xtt.Send {ask chongxu about cancel};

    #return true;
};

#nop 开始接取新手任务;
#alias {wudang.Start} {
    wudang.Accept;

    #nop 使用class对任务别名、触发器、变量进行统一管理;
    #class wudang open;

    #nop 新手任务通用触发;
    #action {^你向冲虚道长打听有关『quest』的消息。$} {
        #nop 阵法任务触发;
        #action {^冲虚道长说道：「武当派以真武七截阵闻名天下} {
            #class wudang.zhenfa open;

            #nop TODO: 空闲校场检测;
            e;

            #nop 如果东面有人，则3秒后再尝试进入东面房间，直到能够进入为止;
            #action {^房间中已经有人在演习阵法} {
                #delay 3 {e};
            };

            #nop 开始阵法演练;
            zhenfa;

            #nop 初始走位;
            #action {%*一会走到%1位。} {
                #variable pos %1;
                #delay 1 {
                    xtt.Send {zouwei $pos};
                }
            };

            #nop 根据阵法进行走位;
            #action {大家从自己现在的位置按照『%1五行阵』的要求往下走一步} {
                #if { "%1" == "正" } {
                    #switch {"$pos"} {
                        #case {"金"} {
                            xtt.Send {zouwei 水};
                            #variable pos 水;
                        };
                        #case {"木"} {
                            xtt.Send {zouwei 火};
                            #variable pos 火;
                        };
                        #case {"水"} {
                            xtt.Send {zouwei 木};
                            #variable pos 木;
                        };
                        #case {"火"} {
                            xtt.Send {zouwei 土};
                            #variable pos 土;
                        };
                        #case {"土"} {
                            xtt.Send {zouwei 金};
                            #variable pos 金;
                        };
                    }
                };
                #else {   
                    #switch {"$pos"} {
                        #case {"金"} {
                            xtt.Send {zouwei 木};
                            #variable pos 木;
                        };
                        #case {"木"} {
                            xtt.Send {zouwei 土};
                            #variable pos 土;
                        };
                        #case {"水"} {
                            xtt.Send {zouwei 火};
                            #variable pos 火;
                        };
                        #case {"火"} {
                            xtt.Send {zouwei 金};
                            #variable pos 金;
                        };
                        #case {"土"} {
                            xtt.Send {zouwei 水};
                            #variable pos 水;
                        };
                    }
                };
            };

            #action {阵法教习挥了挥旗喊道：五行阵演练到此结束} {
                w;
                wudang.Success;
            };

            #class wudang.zhenfa close;
            
            sync.Wait {
                #class wudang.zhenfa kill;
            };
        };

